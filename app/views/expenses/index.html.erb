<h1> All expenses </h1>

<table>
  <tr>
    <th>Date</th>
    <th>Description</th>
    <th>Value</th>
    <th>Category</th>
  </tr>

  <% @expenses.each do |expense| %>
    <tr>
      <td><%= expense.date %></td>
      <td><%= expense.description %></td>
      <td><%= expense.value %></td>
      <td><%= expense.category.name %></td>
    </tr>
  <% end %>
</table>
